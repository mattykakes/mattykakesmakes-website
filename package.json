{
  "name": "MattyKakesMakes",
  "version": "1.0.0",
  "description": "Hugo + Alpine.js + TailwindCSS = Matty Kakes Makes",
  "main": "index.js",
  "devDependencies": {
    "@tailwindcss/postcss": "4.1.13",
    "@tailwindcss/vite": "4.1.13",
    "alpinejs": "3.14.9",
    "autoprefixer": "10.4.21",
    "concurrently": "9.2.1",
    "postcss": "8.5.6",
    "postcss-cli": "11.0.1",
    "tailwindcss": "4.1.13",
    "vite": "7.1.7"
  },
  "scripts": {
    "start": "npm run prepare:hugo && npm run build:css && hugo server --disableFastRender",
    "build:css": "vite build",
    "build": "npm run prepare:hugo && npm run build:css && hugo --minify --gc --cleanDestinationDir",
    "prepare:hugo": "node scripts/copy-alpine.js",
    "rebuild": "npm run build:css",
    "test": "hugo",
    "optimize": "npm run build && echo 'Build optimized for production'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattykakesmakes/mattykakesmakes.git"
  },
  "keywords": [
    "hugo",
    "tailwind",
    "tailwindcsgits",
    "alpinejs",
    "minimal",
    "responsive",
    "light mode",
    "dark mode",
    "hugo blog",
    "matty kakes makes",
    "categories",
    "tags"
  ],
  "author": "Matthew Miller",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mattykakesmakes/mattykakesmakes/issues"
  },
  "homepage": "https://github.com/mattykakesmakes/mattykakesmakes"
}